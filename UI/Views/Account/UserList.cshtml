@model IEnumerable<DomainModels.Entities.User>

@{
    ViewBag.Title = "UserList";
}

<!-- GOOGLE FONTS -->
<link href="https://fonts.googleapis.com/css?family=Montserrat:400,500|Poppins:400,500,600,700|Roboto:400,500" rel="stylesheet" />
<link href="https://cdn.materialdesignicons.com/3.0.39/css/materialdesignicons.min.css" rel="stylesheet" />

<!-- PLUGINS CSS STYLE -->
<link href="~/Tamplate/assets/plugins/toaster/toastr.min.css" rel="stylesheet" />
<link href="~/Tamplate/assets/plugins/nprogress/nprogress.css" rel="stylesheet" />
<link href="~/Tamplate/assets/plugins/flag-icons/css/flag-icon.min.css" rel="stylesheet" />
<link href="~/Tamplate/assets/plugins/jvectormap/jquery-jvectormap-2.0.3.css" rel="stylesheet" />
<link href="~/Tamplate/assets/plugins/ladda/ladda.min.css" rel="stylesheet" />
<link href="~/Tamplate/assets/plugins/select2/css/select2.min.css" rel="stylesheet" />
<link href="~/Tamplate/assets/plugins/daterangepicker/daterangepicker.css" rel="stylesheet" />

<!-- SLEEK CSS -->
<link id="sleek-css" rel="stylesheet" href="~/Tamplate/assets/css/sleek.css" />



<!-- FAVICON -->
<link href="~/Tamplate/assets/img/favicon.png" rel="shortcut icon" />

<!--
  HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries
-->
<!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
<!--[if lt IE 9]>
  <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
<![endif]-->
<script src="~/Tamplate/assets/plugins/nprogress/nprogress.js"></script>




<div class="row">
    <div class="col-12">
        <!-- Recent Order Table -->
        <div class="card card-table-border-none" id="recent-orders">
            <div class="card-header justify-content-between">
                <h2>User List</h2>
               
               
               
               
            </div>
            <div class="card-body pt-0 pb-5">
                <table class="table card-table table-responsive table-responsive-large" style="width:100%">
                    <thead>
                        <tr>
                            <th>SL</th>
                            <th> @Html.DisplayNameFor(model => model.UserName)</th>
                            <th>  @Html.DisplayNameFor(model => model.Password)</th>
                            <th class="d-none d-md-table-cell"> @Html.DisplayNameFor(model => model.FullName)</th>
                            <th class="d-none d-md-table-cell"> Phone</th>
                            <th class="d-none d-md-table-cell"> @Html.DisplayNameFor(model => model.Address)</th>
                            <th>@Html.DisplayNameFor(model => model.Email)</th>
                            <th> @Html.DisplayNameFor(model => model.CreatedDate)</th>
                            <th>Action</th>

                        </tr>
                    </thead>
                    <tbody>
                       @{ 
                           var sl = 0;
                       }
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@(++sl)</td>
                                <td>
                                    <a class="text-dark" href="">   @Html.DisplayFor(modelItem => item.UserName)</a>
                                </td>
                                <td class="d-none d-md-table-cell">    @Html.DisplayFor(modelItem => item.Password)</td>
                                <td class="d-none d-md-table-cell">   @Html.DisplayFor(modelItem => item.FullName)</td>
                                <td class="d-none d-md-table-cell">  @Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                                <td>
                                    <span >   @Html.DisplayFor(modelItem => item.Address)</span>
                                </td>
                                <td>
                                    <span >  @Html.DisplayFor(modelItem => item.Email)</span>
                                </td>
                                <td>
                                    <span >   @Html.DisplayFor(modelItem => item.CreatedDate)</span>
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.UserId }) |
                                  
                                    @Html.ActionLink("Delete", "Delete", new { id = item.UserId })
                                </td>
                            </tr>
                        }
                        </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
